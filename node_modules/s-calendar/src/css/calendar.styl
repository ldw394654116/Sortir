IMG=url("../assets/icon.png");
*{
  padding:0;
  margin:0;
}
.default{
  padding: 5px 10px;
  width: 350px;
  font-size: 16px;
  color: #999;
  line-height: 16px;
  text-align: left;
  box-sizing: border-box;
  border-radius: 5px;
  border: 1px solid #999;
}
.calendar{
	border-radius: 5px;
  	border: 1px solid #999;
  	width: 350px;
    margin: 0 auto;
    height: auto;
    padding: 10px 0;
    margin-top: 10px;
    position: absolute;
    .calendar-m{
    &>i {
      display inline-block
      font-style normal
      font-weight bold
      cursor pointer
      width 11px
      height 16px
      background-image IMG
      position relative
      top 2px
      &.prev {
        background-position -24px -7px
      }
      &.next{
        background-position -5px -7px
      }
    }
    &>span{
      display: inline-block
      margin 0 20px
      width 100px
      span {
        display inline-block
        padding 0 5px
      }
    }
  }
  .calendar-w{
  	margin-top: 10px;
  	.week{
  		display: inline-block;
  		width: 50px;

  	}
  }
  .calendar-d{
  	.week{
  		padding-top: 20px;
		.item{
			display:inline-block;
			width:50px;
      color:#999;
      cursor: pointer;
		  }
      .cur-active{
        color:red;
      }
      .disable{
        color:#ccc;
        pointer-events: none;
      }
  	}
  }
}
